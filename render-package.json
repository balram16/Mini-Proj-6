{
  "name": "booklendiverse-full",
  "version": "1.0.0",
  "description": "BookLendiverse - Book Lending Platform",
  "main": "index.js",
  "private": true,
  "scripts": {
    "install:frontend": "npm install",
    "install:backend": "cd backend && npm install",
    "build": "npm run build",
    "start": "npm run start",
    "start:frontend": "npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm run install:frontend && npm run install:backend",
    "render-postbuild": "echo 'Build completed'"
  },
  "engines": {
    "node": "18.x"
  },
  "cacheDirectories": [
    "node_modules",
    "backend/node_modules"
  ]
} 